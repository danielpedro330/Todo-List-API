datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}


model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  created_at DateTime @default(now())
  taks Task[]

  @@map("users")
}

model Task {
  id String @id @default(uuid())
  title String
  description String
  status String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id])
  user_id String
  
  @@map("tasks")
}